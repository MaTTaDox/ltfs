{% if ips|length %}
    upstream myapp1 {
        {% for ip in ips %}
            server {{ ip }}
        {% endfor %}
    }
{% endif %}

    server {
        listen 8082;

        location / {
            {% if ips|length %}
            proxy_pass http://myapp1;
            {% else %}
                return 503;
            {% endif %}
        }
    }
